<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="1" >

    <LinearLayout
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnBlack"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:onClick="blackButtonClick" />

        <TextView
            android:id="@+id/textViewTriageMainColor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btnRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:onClick="redButtonClick" />

        <TextView
            android:id="@+id/textViewTriageMainColor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btnYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:onClick="yellowButtonClick" />

        <TextView
            android:id="@+id/textViewTriageMainColor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btnGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:onClick="greenButtonClick" />

    </LinearLayout>

    <Space
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0" />

</GridLayout>