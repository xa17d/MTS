<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayoutIm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >
    
    <LinearLayout
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:layout_width="match_parent"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/textViewTherapy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/therapy_mode"
            android:textAppearance="?android:attr/textAppearanceLarge" />
	
        <TextView
            android:id="@+id/textViewTherapyDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_death"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reason_death"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/textDeathReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName" >

            </EditText>
        </LinearLayout>
	    
	</LinearLayout>

    <Button
        android:id="@+id/buttonRecordDeath"
        android:layout_width="185dp"
        android:layout_height="84dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:onClick="recordDeath"
        android:text="@string/record_death" />

</GridLayout>