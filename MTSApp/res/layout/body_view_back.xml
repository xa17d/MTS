<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >

    <ImageView
        android:id="@+id/imageViewBodyFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@android:drawable/btn_dialog" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0" >
        
        <ImageView
            android:id="@+id/ImageViewNeck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:onClick="openNeck"
            android:src="@android:drawable/ic_delete" />

        <ImageView
            android:id="@+id/ImageViewLHand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageViewNeck"
            android:layout_marginRight="45dp"
            android:layout_marginTop="130dp"
            android:layout_toLeftOf="@+id/ImageViewNeck"
            android:onClick="openLeftHand"
            android:src="@android:drawable/ic_delete" />

        <ImageView
            android:id="@+id/ImageViewRHand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageViewNeck"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="130dp"
            android:layout_toRightOf="@+id/ImageViewNeck"
            android:onClick="openRightHand"
            android:src="@android:drawable/ic_delete" />

        <ImageView
            android:id="@+id/ImageViewBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageViewNeck"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:onClick="openBack"
            android:src="@android:drawable/ic_delete" />

    </RelativeLayout>

</GridLayout>